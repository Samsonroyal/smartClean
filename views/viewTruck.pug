doctype html 
html 
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width,initial-scale=1")
        title = title 
        link(href="https://fonts.googleapis.com/css2?family=Arvo&display=swap", rel="stylesheet")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="/stylesheet/css/bootstrap.min.css")
        link(rel="stylesheet", href="dashboard.css")
        link(rel="stylesheet", href="/static/all.css")
    body.bg-success 
        .container
            .row
                .col-md-12.mt-5(style="background-color: #fff; margin-top: 25px; padding: 20px;")
                    h3 
                        a.btn.btn-success.me-4(href="/regTruck")
                            i.fa.fa-plus
                            | Create New
                        | Truck List
                    table.table.table-striped.table-hover.mt-5
                        thead.table-dark
                            tr
                                th Truck Type
                                th Truck Code
                                th Truck Reg. No
                                th
                        tbody 
                            if users.length
                            each user in users
                                tr 
                                    td #{user.truckType} 
                                    td #{user.truckCode}
                                    td #{user.truckReg}
                                    td
                                        a(href)
                                            i.fas.fa-edit.fa-lg.text-success(aria-hidden="true")
                                        a(href)
                                            i.fas.fa-trash-alt.fa-lg.text-success(aria-hidden="true")
                                

        script(src="js/bootstrap.bundle.js")
        script(src="/static/all.js")