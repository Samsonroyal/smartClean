doctype html 
html 
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    title /register Truck
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Arvo&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/stylesheet/css/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheet/style.css")
    link(rel="stylesheet", href="/static/all.css")
  body
    .regTruck(style="padding-top: 60px")
      .container
        .row
          .col-lg-3
          .col-lg-6
            #ui
              h2.text-light.text-center #{viewTitle}
              form.text-center(action="/regTruck/update?id="+user._id method="POST")
                .mb-3
                  label.form-label.text-light(for="truckType") Truck Type
                  select.form-select(aria-label="Default select example" name="truckType")
                    option(value="sewageTruck",selected=user.truckType === "sewageTruck") Sewage Truck
                    option(value="garbageTruck",selected=user.truckType === "garbageTruck") Garbage Truck
                .mb-3
                  label.form-label.text-light(for="truckCode") Truck Code Number
                  input.form-control(type="text", placeholder="truck code number" name="truckCode" value = user.truckCode)
                .mb-3
                  label.form-label.text-light(for="truckReg") Truck Registration Number
                  input.form-control(type="text", placeholder="reg number" name="truckReg" value = user.truckReg)
                .text-center
                  a(href="/regTruck/truckList")
                    button.btn.btn-success.me-4(type="button")
                      i.fas.fa-angle-left.me-2
                      | Back  
                    
                      
                  button.btn.btn-success(type="submit") 
                    i.fa.fa-database.me-2
                    | Submit
          .col-lg-3
    script(src="js/include.js")
    script(src="js/bootstrap.bundle.js")
    script(src="/static/all.js")