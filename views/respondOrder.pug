doctype html
html 
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    title /register Conductor
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Arvo&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/stylesheet/css/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheet/style.css")
    link(rel="stylesheet", href="/static/all.css")
  body
    .customerResponse
      .container
        .row
          .col-lg-3
          .col-lg-6
            #ui
              h2.text-light.text-center Respond to #{clientName} Order
              form.text-center(action="/adminDashboard/message" method="POST" name="respondOrderForm" onsubmit="return validation()")
                .mb-3
                  label.form-label.text-light(for="driver") Driver
                  select.form-select(name="driver")
                    each driver in drivers
                      option(value=driver.name selected=(driver.name == driver.name) ) #{driver.name}

                          
                .mb-3
                  label.form-label.text-light(for="conductor") conductor
                  select.form-select(aria-label="Default select example" name="conductor" )
                    option(selected,hidden disabled) Select
                    
                    each conductor in conductors
                      option(value=conductor.name selected=(conductor.id == conductor.id) ) #{conductor.name}
                .mb-3
                  label.form-label.text-light(for="date") Date
                  input.form-control(type="date", name="date")
                .row
                    .col
                        .mb-3
                            label.form-label.text-light(for="truckType") Truck
                            select.form-select(aria-label="Default select example" name="truckType" id="truckType" onchange="myFunction()")
                                option(value="Please Select") Select
                                option(value="garbage") Garbage truck
                                option(value="sewage") Sewage truck
                                option(value="both") Both trucks
                    .col
                        .mb-3
                            label.form-label.text-light(for="regNo") Truck RegNo
                            select.form-select(aria-label="Default select example" name="regNo" id="regNo" )
                              option(value="Please Select") Select
                              if trucks.length 
                              each truck in trucks
                                option #{truck.truckReg}
                              
                                
                    .col
                        .mb-3
                            label.form-label.text-light(for="truckCode") Truck Code
                            select.form-select(aria-label="Default select example" name="code" id="code" )
                              option(value="Please Select") Select
                              if trucks.length 
                              each truck in trucks
                                option #{truck.truckCode}
                              
                            
                              
                            
                                
                .row
                  .col
                    .mb-3
                      label.form-label.text-light(for="dob") Truck Location
                      select.form-select(aria-label="Default select example" name="truckLocation")
                                option(value="Please Select") Select
                                option(value="At service") At Service
                                option(value="Not at Service") Not at Service 
                  .col
                    .mb-3
                      label.form-label.text-light(for="residence") Next Destination
                      input.form-control(type="text", placeholder="destination", name="destination")
                .mb-3
                a(href="/adminDashboard")
                  button.btn.btn-success.me-4(type="button") 
                    i.fas.fa-angle-left.me-2
                    | Back  
                button.btn.btn-success(type="submit") 
                  i.fa.fa-database.me-2
                  | Submit
          .col-lg-3
    
    script(src="js/bootstrap.bundle.js")
    script(src="js/respondOrder.js") 
    script(src="/static/all.js")
    
