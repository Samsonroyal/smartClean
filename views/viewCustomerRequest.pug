doctype html 
html 
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width,initial-scale=1")
        title=title
        link(href="https://fonts.googleapis.com/css2?family=Arvo&display=swap", rel="stylesheet")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="/stylesheet/css/bootstrap.min.css")
        link(rel="stylesheet", href="dashboard.css")
        link(rel="stylesheet", href="/static/all.css")
    body.bg-success 
        .container
            .row
                .col-md-12.mt-5(style="background-color: #fff; margin-top: 25px; padding: 20px;")
                    h3
                        
                        | Customer Requests
                        a.btn.btn-success.ms-4(href="/adminDashboard")
                            i.fas.fa-arrow-alt-circle-left
                            | Back
                    table.table.table-striped.table-hover.mt-5
                        thead.table-dark
                            tr
                                th Name
                                th Nin
                                th Contact
                                th Location
                                th Service
                                th Request Type
                                th Time
                                th No. Of Conductors
                                th Service Fee
                                th
                        tbody
                            for order in orderss
                                tr
                                    td #{order.name}
                                    td #{order.nin}
                                    td #{order.telephone}
                                    td #{order.location}
                                    td #{order.service}
                                    td #{order.requestType}
                                    td #{order.time}
                                    td #{order.numberOfConductors}
                                    td #{order.serviceFee}
                                    td
                                        a(href='/adminDashboard/respondToOrder/'+order._id)
                                            i.fas.fa-reply.fa-lg.text-success(aria-hidden="true")
        script(src="js/bootstrap.bundle.js")
        script(src="/static/all.js")
        