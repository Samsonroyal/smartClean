doctype html 
html 
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width,initial-scale=1")
        title=title
        link(href="https://fonts.googleapis.com/css2?family=Arvo&display=swap", rel="stylesheet")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="/stylesheet/css/bootstrap.min.css")
        link(rel="stylesheet", href="dashboard.css")
        link(rel="stylesheet", href="/static/all.css")
    body.bg-success 
        .container
            .row
                .col-md-12.mt-5(style="background-color: #fff; margin-top: 25px; padding: 20px;")
                    h3
                        
                        | My Messages
                        a.btn.btn-success.ms-4(href="/customerPage")
                            i.fas.fa-arrow-alt-circle-left
                            | Back
                    table.table.table-striped.table-hover.mt-5
                        thead.table-dark
                            tr
                                th Driver
                                th Conductor
                                th Date
                                th Truck
                                th Truck RegNo.
                                th Truck code
                                th Truck Location
                                th Next Destination
                                
                                
                        tbody
                            if responses.length
                            each response in responses
                                tr
                                    td #{response.driver}
                                    td #{response.conductor}
                                    td #{response.date}
                                    td #{response.truckType}
                                    td #{response.regNo}
                                    td #{response.code}
                                    td #{response.truckLocation}
                                    td #{response.destination}
                                    
                                    
        script(src="js/bootstrap.bundle.js")
        script(src="/static/all.js")
        